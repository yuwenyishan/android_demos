<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jax.fileprovider.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/take_photo_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="takePhoto(origin file://)"
        android:textAllCaps="false" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/take_photo_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="takePhoto(fileProvider content://)"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/take_photo_1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/take_photo_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="takePhoto(fileProvider content:// public folders)"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/take_photo_2" />

</android.support.constraint.ConstraintLayout>
